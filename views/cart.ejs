<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Your Cart</title>
</head>
<body>
    <header>
        <h1>Your Cart</h1>
        <a href="/tours">Back to Tours</a>
    </header>
    <main>
        <ul>
            <% if (cart.length === 0) { %>
                <p>Your cart is empty.</p>
            <% } else { %>
                <% cart.forEach(item => { %>
                    <li>
                        <h2><%= item.tourId.name %></h2>
                        <p>Price: $<%= item.tourId.price %></p>
                        <p>Quantity: <%= item.quantity %></p>
                        <form action="/cart/<%= item.tourId._id %>/remove" method="post">
                            <button type="submit">Remove from Cart</button>
                        </form>
                    </li>
                <% }); %>
            <% } %>
        </ul>
    </main>
</body>
</html>
